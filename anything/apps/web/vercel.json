{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "functions": {
    "api/index.mjs": {
      "includeFiles": "build/server/**",
      "maxDuration": 60,
      "regions": ["iad1"]
    }
  },
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/api?__pathname=/$1"
    }
  ]
}
